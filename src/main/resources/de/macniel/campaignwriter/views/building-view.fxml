<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<SplitPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="de.macniel.campaignwriter.views.BuildingView"
           prefHeight="400.0" prefWidth="600.0">
        <VBox VBox.vgrow="NEVER">
            <ListView fx:id="notesLister" VBox.vgrow="ALWAYS"></ListView>
            <HBox>
                <ButtonBar>
                    <buttons>
                        <SplitMenuButton text="Neu" fx:id="creationMenuButton" onAction="#createNewNote">
                        </SplitMenuButton>
                        <Button onMouseClicked="#deleteCurrentNote">
                            <graphic>
                                <FontIcon iconLiteral="icm-bin"/>
                            </graphic>
                        </Button>
                    </buttons>
                </ButtonBar>
            </HBox>
        </VBox>

        <VBox>

            <BorderPane fx:id="editorWindow" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <top>
                    <ToolBar visible="false" fx:id="editorToolbar"></ToolBar>
                </top>
                <!-- Contains the editor view -->
            </BorderPane>
        </VBox>
    </SplitPane>
